<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evaluacion.Login"
             Title="Login">
    <Grid>
        <Image Source="login.jpg" Aspect="AspectFill" />

        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <StackLayout BackgroundColor="White" Opacity="0.8"  Padding="20">
                <Label HorizontalOptions="Center" FontSize="25">Black Clock!</Label>
                <Image Source="userr.png" HeightRequest="100" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                <Entry Placeholder="Username" TextColor="Black" x:Name="UsernameEntry" Margin="0,10" />
                <Entry Placeholder="Password" TextColor="Black" IsPassword="true" x:Name="PasswordEntry" Margin="0,10" />

                <Button Text="Login" Clicked="Button_Clicked"  HorizontalOptions="FillAndExpand"  TextColor="Black" Margin="0,20" BackgroundColor="#ACACAC" CornerRadius="10" />

                <Label x:Name="StatusLabel" Text="" HorizontalOptions="Center" TextColor="Red" Margin="0,10" />
            </StackLayout>
        </StackLayout>
    </Grid>

</ContentPage>