<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evaluacion.Bienvenido"
             >
    <Grid>
        <Image Source="espacio.jpg" Aspect="AspectFill" />
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <StackLayout BackgroundColor="White" Opacity="0.8"  Padding="20">

                <Label x:Name="UsuarioLabel"
               FontSize="25"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand" />
                <Button Text="Pagina inicial" Clicked="Button_Clicked" HorizontalOptions="FillAndExpand"  TextColor="Black" Margin="0,20" BackgroundColor="#ACACAC" CornerRadius="10" />
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
